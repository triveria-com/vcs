{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Product Carbon Footprint",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/triveria-com/vcs/refs/heads/main/ebsi/verifiable_attestation.json"
    },
    {
      "properties": {
        "credentialSubject": {
          "type": "object",
          "properties": {
            "id": {
              "description": "Defines a unique identifier of the organization for which the PCF is issued (e.g. DID-subject)",
              "type": "string"
            },
            "organizationName": {
              "title": "Organization Name",
              "description": "The name of the organization that declares the PCF values",
              "type": "string"
            },
            "carbonFootprint": {
              "$ref": "#/$defs/carbonFootprint"
            }
          },
          "required": [
            "id",
            "organizationName",
            "carbonFootprint"
          ]
        }
      }
    }
  ],
  "$defs": {
    "carbonFootprint": {
      "description": "Defines the manufacturer's Carbon Footprint",
      "type": "object",
      "properties": {
        "productCategory": {
          "description": "Product Category",
          "type": "string"
        },
        "declaredUnit": {
          "description": "Declared Unit in kg per ton",
          "type": "string"
        },
        "systematicScope": {
          "description": "Total emissions",
          "type": "string",
          "enum": [
            "Cradle-to-Gate",
            "Cradle-to-Grave"
          ]
        },
        "geographicalScope": {
          "description": "Geographical Scope",
          "type": "string"
        },
        "temporalScope": {
          "description": "Temporal Scope / Time-frame",
          "type": "string"
        }
      },
      "required": [
        "productCategory",
        "declaredUnit",
        "systematicScope",
        "geographicalScope",
        "temporalScope"
      ]
    }
  }
}