{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "IDunion Trusted Issuer Accreditation",
  "description": "Verifiable credential to onboard to a trust list and accredit for issuance",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/triveria-com/vcs/refs/heads/main/ebsi/verifiable_attestation.json"
    },
    {
      "properties": {
        "credentialSubject": {
          "type": "object",
          "properties": {
            "id": {
              "description": "Defines a unique identifier of the organization for which the accreditation is issued",
              "type": "string"
            },
            "onboardingDid": {
              "description": "Defines a unique identifier of the organization for the Trust List purposes",
              "type": "string"
            },
            "organizationName": {
              "title": "Organization Name",
              "description": "Name of the organization the TIA is issued to",
              "type": "string"
            },
            "tradeName": {
              "title": "Trade Name",
              "description": "Trade name as defined by ETSI TS 119 612 V2.3.1 (2024-11) - 5.4.2 TSP trade name",
              "type": "string"
            },
            "orgAddress": {
              "$ref": "#/$defs/address"
            },
            "orgContactInfo": {
              "$ref": "#/$defs/contactInfo"
            },
            "orgWebsite": {
              "description": "Organization web site",
              "type": "string"
            },
            "x509Certificate": {
              "description": "x509 Certificate",
              "type": "string"
            },
            "accreditedFor": {
              "description": "Defines for issuance of which credentials the issuer is accredited for",
              "type": "array",
              "items": {
                "$ref": "#/$defs/accreditation"
              }
            }
          },
          "required": [
            "id",
            "onboardingDid",
            "legalName",
            "legalForm",
            "orgAddress"
          ]
        }
      }
    }
  ],
  "$defs": {
    "address": {
      "streetAddress": {
        "description": "Street address",
        "type": "string"
      },
      "city": {
        "description": "City",
        "type": "string"
      },
      "state": {
        "description": "State",
        "type": "string"
      },
      "postalCode": {
        "description": "Postal code",
        "type": "string"
      },
      "country": {
        "description": "Country",
        "type": "string"
      }
    },
    "contactInfo" : {
      "email": {
        "description": "Email",
        "type": "string"
      },
      "website": {
        "description": "website",
        "type": "string"
      }
    },
    "accreditation": {
      "description": "",
      "type": "object",
      "properties": {
        "limitJurisdiction": {
          "description": "Limits the credential validity for a specific jurisdiction",
          "type": "string"
        },
        "schemaId": {
          "description": "Verifiable Credential Schema ID the issuer is accredited to issue",
          "type": "string"
        },
        "types": {
          "description": "Identifiers defining a specific Verifiable Credential type",
          "type": "array"
        }
      },
      "required": [
        "schemaId",
        "types"
      ]
    }
  }
}